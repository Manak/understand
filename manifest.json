{
  "name": "Understand by Fruumo",
  "short_name":"Understand",
  "manifest_version":2,
  "version": "1.0",
  "offline_enabled":true,
  "background": {
    "scripts": ["./dist/background.bundle.js"],
    "persistent": true
  },
  "icons": {
    "128": "./images/icon.png"
  },
  "browser_action": {
    "default_icon": {
      "1024": "images/icon.png"
    },
    "default_popup": "./browser-action/index.html"
  },
  "permissions":["chrome://favicon/*", "<all_urls>","tabs","sessions","storage","unlimitedStorage","background","alarms"]
}